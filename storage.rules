rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 모든 사용자에게 읽기 권한 부여
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // 프로필 이미지 업로드 (인증된 사용자만)
    match /profile-images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 사업자등록증 이미지 업로드 (인증된 사용자만)
    match /contractor-business-licenses/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 신분증 이미지 업로드 (인증된 사용자만)
    match /id-cards/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 광고 이미지 업로드 (관리자만)
    match /advertisements/{adId}/{allPaths=**} {
      allow write: if request.auth != null && 
        get(/databases/$(request.auth.token.database_id)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 기타 파일 업로드 (인증된 사용자만)
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
